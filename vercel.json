{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "/public/index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/update-ratings",
      "methods": ["GET"],
      "dest": "api/update-ratings.js"
    },
    {
      "src": "/api/health",
      "methods": ["GET"],
      "dest": "api/health.js"
    },
    {
      "src": "/(.*)",
      "dest": "index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/update-ratings",
      "schedule": "0 0 * * *"
    }
  ]
}